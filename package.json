{
  "name": "riot-webext",
  "private": true,
  "scripts": {
    "install": "run-s riot-web:init",
    "riot-web:clean": "rimraf build riot-web",
    "riot-web:init": "git submodule init && git submodule update",
    "riot-web:install": "cd riot-web && ./scripts/fetch-develop.deps.sh --depth 1 && yarn install",
    "riot-web:build": "cd riot-web && BUILD_TARGET=webext yarn build",
    "build": "run-s build:* test:coverage lint",
    "build:riot-web": "run-s riot-web:*",
    "build:firefox": "npm run parcel:build -- -d build/firefox",
    "build:chrome": "npm run parcel:build -- -d build/chrome",
    "build:copy": "./scripts/copy-assets.sh",
    "dev": "run-p dev:*",
    "dev:copy": "./scripts/copy-assets.sh && nodemon -w src --ext '*' --exec \"./scripts/copy-assets.sh\"",
    "dev:firefox": "npm run parcel:watch -- -d build/firefox --cache-dir .cache/firefox",
    "dev:chrome": "npm run parcel:watch -- -d build/chrome --cache-dir .cache/chrome",
    "dev:riot-web": "cd riot-web && BUILD_TARGET=webext yarn start",
    "parcel:build": "parcel build src/background.ts src/riot-web.ts src/options.html --no-minify --no-source-maps --no-cache",
    "parcel:watch": "parcel watch src/background.ts src/riot-web.ts src/options.html --no-hmr",
    "dist": "run-p dist:*",
    "dist:firefox": "run-s dist:firefox:*",
    "dist:firefox:clean": "rimraf web-ext-artifacts",
    "dist:firefox:lint": "web-ext lint -s build/firefox",
    "dist:firefox:build": "web-ext build -s build/firefox",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.ts",
    "lint:tsc": "tsc",
    "test": "ts-mocha test/*.test.ts",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "nyc npm run test"
  },
  "dependencies": {
    "jsoneditor": "^8.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/chrome": "0.0.92",
    "@types/firefox-webext-browser": "^70.0.1",
    "@types/jsoneditor": "^5.28.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.5.0",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-html-externals": "^0.1.2",
    "rimraf": "^3.0.0",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.4.0",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.7.5",
    "web-ext": "^4.0.0",
    "webextension-polyfill": "^0.6.0",
    "webextensions-api-fake": "^1.1.5"
  },
  "browserslist": [
    "Firefox >= 67",
    "last 2 Chrome versions"
  ],
  "mocha": {
    "bail": true,
    "reporter": "progress",
    "extension": "ts",
    "paths": true,
    "project": "tsconfig.json"
  },
  "nyc": {
    "exclude": [
      "test/**/*.ts"
    ],
    "reporter": [
      "html",
      "text"
    ]
  },
  "externals": {
    "vendor/**/*": false
  },
  "license": "Apache-2.0"
}
