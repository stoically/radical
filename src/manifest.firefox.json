{
  "description": "Decentralised, encrypted chat & collaboration powered by Riot Web and Matrix",
  "manifest_version": 2,
  "name": "Radical",
  "version": "1.5.11",
  "icons": {
    "48": "vector-icons/riot48.png",
    "96": "vector-icons/riot96.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "vector-icons/riot32.png"
    },
    "default_title": "Radical"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["riot/bundles/webext/usercontent.js"],
  "permissions": ["contextualIdentities", "cookies", "identity", "storage"],
  "applications": {
    "gecko": {
      "id": "@riot-webext",
      "strict_min_version": "68.0"
    }
  }
}
