{
  "description": "Decentralised, encrypted chat & collaboration powered by Matrix",
  "manifest_version": 2,
  "name": "Riot",
  "version": "1.5.8.3",
  "content_security_policy": "script-src 'self' 'wasm-eval' https://www.recaptcha.net https://www.gstatic.com; object-src 'self'",
  "icons": {
    "48": "vector-icons/riot48.png",
    "128": "vector-icons/riot128.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "vector-icons/riot32.png"
    },
    "default_title": "Riot"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"]
  },
  "permissions": ["storage"],
  "optional_permissions": ["webRequest", "<all_urls>"]
}
